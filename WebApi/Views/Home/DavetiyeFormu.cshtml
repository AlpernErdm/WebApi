
@{
    ViewBag.Title = "DavetiyeFormu";
}

<div class="panel panel-success">
    <div class="panel-heading"><h4>Sende Davetlisin</h4></div>  
    <div class="panel-body>
        @using (Html.BeginForm())
            {
        <div class="form-group">
            <label>Ad:</label>
            @Html.TextBoxFor(x => x.Ad, new string { @class = "form-control" })
        </div>
                    <div class="form-group>
                        <label>Eposta:</label>
                        @Html.TextBoxFor(x =>x.Eposta ,new string { @class = "form-control" })
                    </div>
        <div class="form-group">
            <label>Katılacak mısın ?</label>
            @Html.DropDownListFor(x =>x.KatilmaDurumu ,new[] {
           new SelectListItem  {Text ="Evet Geliyorum"
           ,Value =bool.TrueString },
           new SelectListItem() {Text="Hayır Malesef Gelemiyorum",
Value=bool.FalseString }
           } ,"Geliyor Musun?",new {@class ="form-control"})

        </div>
        <div class="text-center">
            <input class="btn btn-success" type="submit" value="Gönder />"
        </div>
            }
        </div>
    </div>
